{
  "name": "express-api",
  "version": "1.0.0",
  "main": "index.js",
  "keywords": [],
  "author": "Stefferson Fernandes",
  "license": "MIT",
  "description": "Express API - TypeScript",
  "_moduleAliases": {
    "@bases": "dist/bases",
    "@database": "dist/database",
    "@errors": "dist/errors",
    "@logging": "dist/logging",
    "@middlewares": "dist/middlewares",
    "@modules": "dist/modules",
    "@routes": "dist/routes",
    "@utils": "dist/utils"
  },
  "scripts": {
    "dev": "dotenv -- tsc-watch --onsuccess \"node dist/index.js\"",
    "build": "tsc",
    "start": "dotenv -- node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e ./test/.env.test -- jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "ms": "^2.1.3",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.0",
    "winston": "^3.17.0",
    "zod": "^4.1.11",
    "zod-openapi": "^5.4.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsc-watch": "^7.1.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.config.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@bases/(.*)$": "<rootDir>/bases/$1",
      "^@database/(.*)$": "<rootDir>/database/$1",
      "^@errors/(.*)$": "<rootDir>/errors/$1",
      "^@logging/(.*)$": "<rootDir>/logging/$1",
      "^@middlewares/(.*)$": "<rootDir>/middlewares/$1",
      "^@modules/(.*)$": "<rootDir>/modules/$1",
      "^@routes/(.*)$": "<rootDir>/routes/$1",
      "^@utils/(.*)$": "<rootDir>/utils/$1"
    },
    "modulePathIgnorePatterns": [
      "node_modules",
      "interfaces",
      "src/types"
    ]
  }
}
